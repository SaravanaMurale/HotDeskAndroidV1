<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">
                    <solid android:color="@color/figmaBackground"/>
                    <padding android:right="12dp"
                        android:left="12dp"/>
                    <corners android:radius="@dimen/_8sdp"/>
                    <stroke android:color="@color/figmaBorder"
                        android:width="1dp"/>
                </shape>

            </item>

            <item
                android:drawable="@drawable/ic_arrow_up"
                android:width="@dimen/_15sdp"
                android:height="@dimen/_10sdp"
                android:gravity="end|center_vertical"/>

        </layer-list>

    </item>
</selector>
