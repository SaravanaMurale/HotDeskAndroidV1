<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <view
        android:id="@+id/border"
        class="android.widget.TextView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:backgroundTint="@color/figmaBorder"
        />
    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/border"
            android:background="@color/figmaBackground"
            android:padding="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp">

            <ImageView
                android:id="@+id/edit_outLine"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:src="@drawable/circle_outline" />

            <ImageView
                android:id="@+id/editBookingImage"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_toRightOf="@id/edit_outLine"

                android:src="@drawable/car_edit" />

            <TextView
                android:id="@+id/editCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_toLeftOf="@+id/editCheckInIcon"
                android:layout_toRightOf="@id/editBookingImage"
                android:text="Space-001"
                android:textColor="@color/figmaBlack"
                android:textSize="18sp"
                android:theme="@style/TextBold" />


            <ImageView
                android:id="@+id/editRefreshIcon"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:src="@drawable/refresh"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/editCheckOutTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_toLeftOf="@id/editRefreshIcon"
                android:text="8:00"
                android:textColor="@color/figmaBlack"
                android:textSize="14sp"
                android:theme="@style/TextBold" />

            <ImageView
                android:id="@+id/editCheckOutIcon"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_6sdp"
                android:layout_toLeftOf="@id/editCheckOutTime"
                android:src="@drawable/checkout"
                app:tint="@color/figmaBlack" />


            <TextView
                android:id="@+id/editCheckInTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_toLeftOf="@+id/editCheckOutIcon"
                android:text="8:00"
                android:textColor="@color/figmaBlack"
                android:textSize="14sp"
                android:theme="@style/TextBold" />

            <ImageView
                android:id="@+id/editCheckInIcon"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_toLeftOf="@+id/editCheckInTime"
                android:src="@drawable/checkin"
                app:tint="@color/figmaBlack" />

        </RelativeLayout>
        <view
            class="android.widget.TextView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:backgroundTint="@color/white"/>
        <RelativeLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top"
            android:padding="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:background="@color/figmaBackground"
            android:paddingVertical="@dimen/_10sdp">

            <TextView
                android:id="@+id/editDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Delete"
                android:textColor="@color/figma_red"
                android:textSize="18sp"
                android:theme="@style/TextBold" />

            <TextView
                android:id="@+id/editTextEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:text="Edit"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:theme="@style/TextBold" />
        </RelativeLayout>

    </LinearLayout>
    <view
        class="android.widget.TextView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@id/lin"
        android:backgroundTint="@color/figmaBorder"
        />
</RelativeLayout>