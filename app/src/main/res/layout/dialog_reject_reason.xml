<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_5sdp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent"

        >
        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/hybrid_hero_icon"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/figmaBlueText"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tv_err_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="@dimen/_4sdp"
            android:text="Please enter the rejection comment "
            android:textColor="@color/figmaBlack"
            android:theme="@style/TextRegular"
            android:textSize="@dimen/_11sdp"
            android:layout_margin="@dimen/_8sdp"/>

        <EditText
            android:id="@+id/edt_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:background="@drawable/edittext_bg"
            android:padding="@dimen/_8sdp"
            android:inputType="textMultiLine"
            android:text=""
            android:maxLines="10"
            android:lines="3"
            android:maxLength="100"
            android:layout_marginHorizontal="@dimen/_8sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_8sdp">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:padding="@dimen/_10sdp"
                android:text="Close"
                android:theme="@style/TextBold"
                android:textColor="@color/figmaBlack"
                android:layout_marginStart="@dimen/_12sdp"/>
            <view class="androidx.constraintlayout.widget.ConstraintLayout"
                android:layout_width="@dimen/_2sdp"
                android:layout_height="match_parent"
                android:background="@color/white"
                />
            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center|end"
                android:padding="@dimen/_10sdp"
                android:text="Reject"
                android:theme="@style/TextRegular"
                android:textColor="@color/figmaBlack"
                android:layout_marginEnd="@dimen/_12sdp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>