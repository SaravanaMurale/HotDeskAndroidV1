    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hdr_lay"
        android:layout_marginBottom="@dimen/_5sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:id="@+id/txt_title"
            android:text=""
            style="@style/TextRegular"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/figmaBlack"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_title_count"
            android:text=""
            android:layout_toEndOf="@+id/txt_title"
            android:layout_marginStart="@dimen/_3sdp"
            style="@style/TextRegular"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/figma_red"/>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_6sdp"
        android:layout_below="@+id/hdr_lay"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp">

        <RelativeLayout
            android:id="@+id/rel_status"
            android:layout_width="@dimen/_6sdp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@color/figmaBlue" >


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivEditPrifle"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/avatar" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_toRightOf="@+id/ivEditPrifle"
                    tools:text="Desk"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/figmaBlack"/>

                <TextView
                    android:id="@+id/tvUserTeam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pmo Office"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/ivEditPrifle"
                    android:layout_below="@+id/tvUserName"
                    android:layout_marginTop="@dimen/_5sdp"
                    style="@style/TextRegular"
                    android:textColor="@color/figmaBlack"
                    android:layout_toStartOf="@+id/btn_layout"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/_9sdp"/>

                <LinearLayout
                    android:id="@+id/btn_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/tvUserName">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSubmit"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:text="Accept"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/button_blue_bg"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnReject"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:text="Reject"
                        android:textSize="@dimen/_8sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/figmaBlack"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:background="@drawable/button_grey_bg"
                        />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:id="@+id/line_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/figmaBgGrey"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_4sdp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_date"
                    style="@style/TextRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="10 Aug,2022"
                    android:textColor="@color/figmaBlack"
                    android:textSize="@dimen/_9sdp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true">
                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/checkin"
                        app:tint="@color/figmaBlack"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/CheckInTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:text="8:00"
                        android:textColor="@color/figmaBlack"
                        android:textSize="@dimen/_9sdp"
                        android:layout_gravity="center_vertical"/>


                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/checkout"
                        app:tint="@color/figmaBlack"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/CheckOutTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:text="8:00"
                        android:textColor="@color/figmaBlack"
                        android:textSize="@dimen/_9sdp"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/figmaBgGrey"
                android:layout_marginTop="@dimen/_4sdp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@+id/btncheckboxlay"
                    android:layout_marginEnd="@dimen/_8sdp">

                    <ImageView
                        android:id="@+id/ivMeeting"
                        android:layout_width="@dimen/_19sdp"
                        android:layout_height="@dimen/_21sdp"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/chair" />

                    <TextView
                        android:id="@+id/tvDesk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/ivMeeting"
                        tools:text="Desk"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:textColor="@color/figmaBlack"
                        android:textSize="@dimen/_11sdp" />

                    <ImageView
                        android:id="@+id/img_info"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/tvDesk"
                        android:text="Desk"
                        android:src="@drawable/info_circle"
                        app:tint="@color/figmaBlueText"
                        android:layout_marginTop="@dimen/_2sdp"/>

                    <TextView
                        android:id="@+id/tvAddress"
                        style="@style/TextRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvDesk"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/ivMeeting"
                        android:text="Pmo Office"
                        android:textSize="@dimen/_9sdp"
                        android:textColor="@color/figmaBlack" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btncheckboxlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_4sdp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnRemove"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/button_grey_bg"
                        android:gravity="center"
                        android:text="Remove"
                        android:textAllCaps="false"
                        android:textColor="@color/figmaBlack"
                        android:textSize="@dimen/_8sdp"
                        android:visibility="gone"/>

                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:visibility="visible"
                        android:buttonTint="@color/figmaBlueText"
                        />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>