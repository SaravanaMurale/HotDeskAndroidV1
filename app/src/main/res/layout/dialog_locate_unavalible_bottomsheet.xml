<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:behavior_peekHeight="100dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_15sdp"
        >

    <TextView
        android:id="@+id/unAvalibaleDeskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_3sdp"
        android:text="Desk-001"
        android:textSize="@dimen/_14sdp"
        android:theme="@style/TextBold" />

    <TextView
        android:id="@+id/unAvaliableLocate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="Location1,Location2"
        android:theme="@style/TextBold"
        android:layout_marginTop="@dimen/_5sdp"
        />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDescriptionUnAvaliable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"

        >

        <ImageView
            android:id="@+id/ivOnline"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:src="@drawable/status_unavaliable"
            />

        <TextView
            android:id="@+id/tvUnaValibale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toRightOf="@+id/ivOnline"
            android:text="Unavaliable" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This desk is unavliable"
            android:layout_below="@+id/tvUnaValibale"
            android:layout_marginTop="@dimen/_10sdp"
            />

    </RelativeLayout>

        <!--Continue and Book-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvUnavaliableBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:text="Back"
                android:textSize="@dimen/_14sdp"
                android:theme="@style/TextBold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:text="Book"
                android:textColor="@color/figmaBlue"
                android:textSize="@dimen/_14sdp"
                android:theme="@style/TextBold"
                android:visibility="gone"
                />
        </RelativeLayout>


    </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>