<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <view
        android:id="@+id/border"
        class="android.widget.TextView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:backgroundTint="@color/figmaBorder" />

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/figmaBackground"
            android:padding="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp">

            <ImageView
                android:id="@+id/bookTypeImage"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tvBookType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_toStartOf="@+id/timeLayout"
                android:layout_toEndOf="@id/bookTypeImage"
                android:text="Space-001"
                android:textColor="@color/figmaBlack"
                android:textSize="18sp"
                android:theme="@style/TextBold" />

            <LinearLayout
                android:id="@+id/timeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivCheckInIcon"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/checkin"
                    app:tint="@color/figmaBlack" />


                <TextView
                    android:id="@+id/tvCheckInTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textColor="@color/figmaBlack"
                    android:textSize="14sp"
                    android:theme="@style/TextBold"
                    tools:text="8:00" />

                <ImageView
                    android:id="@+id/tvCheckOutIcon"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:src="@drawable/checkout"
                    app:tint="@color/figmaBlack" />

                <TextView
                    android:id="@+id/tvCheckOutTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/figmaBlack"
                    android:textSize="14sp"
                    android:theme="@style/TextBold"
                    tools:text="8:00" />

            </LinearLayout>

        </RelativeLayout>

        <view
            class="android.widget.TextView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:backgroundTint="@color/white" />

        <RelativeLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_1sdp"
            android:background="@color/figmaBackground"
            android:padding="@dimen/_10sdp"
            android:paddingVertical="@dimen/_10sdp">

            <TextView
                android:id="@+id/editDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Delete"
                android:textColor="#BA3B46"
                android:textSize="18sp"
                android:theme="@style/TextBold" />

            <TextView
                android:id="@+id/editTextEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Edit"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:theme="@style/TextBold" />
        </RelativeLayout>

    </LinearLayout>

    <view
        class="android.widget.TextView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:backgroundTint="@color/figmaBorder" />

</LinearLayout>