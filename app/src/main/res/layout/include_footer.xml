<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:elevation="@dimen/_5sdp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGrey300" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_65sdp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <LinearLayout
            android:id="@+id/ll_locate_nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_home_nav"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/locatee_nav_icon"
                />

            <TextView
                android:id="@+id/txt_locate_nav"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="top|center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_9sdp"
                android:visibility="gone" />

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_1sdp"
            android:background="@color/colorGrey300" />

        <LinearLayout
            android:id="@+id/ll_book_nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_book_nav"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/cal_nav_icon"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/txt_explore"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="top|center"
                android:visibility="gone"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_9sdp" />

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_1sdp"
            android:background="@color/colorGrey300" />

        <LinearLayout
            android:id="@+id/ll_hotdesk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_hotdesk_nav"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/hotdesk_nav_logo"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/txt_cart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="top|center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_9sdp"
                android:visibility="gone" />

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_1sdp"
            android:background="@color/colorGrey300" />

        <LinearLayout
            android:id="@+id/ll_teams"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_teams"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/team_nav_icon"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/txt_chat"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="top|center"
                android:visibility="gone"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_9sdp" />

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_1sdp"
            android:background="@color/colorGrey300" />

        <LinearLayout
            android:id="@+id/ll_settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_settings"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/wellbeing_nav_icon"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/txt_settings"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="top|center"
                android:visibility="gone"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_9sdp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>